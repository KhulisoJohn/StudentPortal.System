@model StudentPortalSystem.Models.Student

@{
    ViewData["Title"] = "Student Profile";
}

<h2>@ViewData["Title"]</h2>

<div class="card mt-4">
    <div class="card-body">
        <h5 class="card-title">Student ID: @Model.Id</h5>
        <p class="card-text">
            <strong>Enrollment Date:</strong> @Model.EnrollmentDate.ToString("yyyy-MM-dd")<br />
            <strong>Status:</strong>@Model.Status</strong>
           
        </p>

        @* Future: Show StudentSubjects here *@
    </div>
</div>
